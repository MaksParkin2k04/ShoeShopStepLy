@page "/{companyName}"
@model ShoeShop.MultiTenantAdmin.Pages.CompanyAdminModel
@{
    ViewData["Title"] = $"Админка - {Model.Company?.Name}";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1>Админка: @Model.Company?.Name</h1>
                <div>
                    <span class="badge bg-primary">@Model.Company?.ShortName</span>
                    <a href="/companies" class="btn btn-outline-secondary btn-sm">Все компании</a>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-3">
            <div class="card">
                <div class="card-header">
                    <h5>Навигация</h5>
                </div>
                <div class="list-group list-group-flush">
                    <a href="/@Model.Company?.ShortName/products" class="list-group-item list-group-item-action">
                        <i class="fas fa-shoe-prints me-2"></i>Кроссовки
                    </a>
                    <a href="/@Model.Company?.ShortName/orders" class="list-group-item list-group-item-action">
                        <i class="fas fa-shopping-cart me-2"></i>Заказы
                    </a>
                    <a href="/@Model.Company?.ShortName/categories" class="list-group-item list-group-item-action">
                        <i class="fas fa-tags me-2"></i>Категории
                    </a>
                    <a href="/@Model.Company?.ShortName/settings" class="list-group-item list-group-item-action">
                        <i class="fas fa-cog me-2"></i>Настройки
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-9">
            <div class="row">
                <div class="col-md-4">
                    <div class="card text-white bg-primary mb-3">
                        <div class="card-header">Добро пожаловать!</div>
                        <div class="card-body">
                            <p class="card-text">Система администрирования для @Model.Company?.Name</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card text-white bg-success mb-3">
                        <div class="card-header">Статус</div>
                        <div class="card-body">
                            <p class="card-text">Активна с @Model.Company?.CreatedDate.ToString("dd.MM.yyyy")</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card text-white bg-info mb-3">
                        <div class="card-header">Контакт</div>
                        <div class="card-body">
                            <p class="card-text">@Model.Company?.ContactEmail</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card">
                <div class="card-header">
                    <h5>Информация о компании</h5>
                </div>
                <div class="card-body">
                    <p><strong>Название:</strong> @Model.Company?.Name</p>
                    <p><strong>Сокращение:</strong> @Model.Company?.ShortName</p>
                    <p><strong>Описание:</strong> @(Model.Company?.Description ?? "Не указано")</p>
                    <p><strong>Email:</strong> @Model.Company?.ContactEmail</p>
                    <p><strong>Телефон:</strong> @(Model.Company?.ContactPhone ?? "Не указан")</p>
                </div>
            </div>
        </div>
    </div>
</div>