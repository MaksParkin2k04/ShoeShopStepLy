@page "/{companyName}/catalog"
@model ShoeShop.MultiTenantAdmin.Pages.CompanyCatalogModel
@{
    ViewData["Title"] = $"Каталог товаров - {Model.Company?.Name}";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1>Каталог товаров: @Model.Company?.Name</h1>
                <div>
                    <a href="/@Model.Company?.ShortName/admin" class="btn btn-outline-secondary">Назад к админке</a>
                    <a href="/@Model.Company?.ShortName/addproduct" class="btn btn-success">Добавить товар</a>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5>Список товаров</h5>
                </div>
                <div class="card-body">
                    @if (Model.Products.Any()) {
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>Название</th>
                                        <th>Категория</th>
                                        <th>Цена</th>
                                        <th>Цена со скидкой</th>
                                        <th>Дата добавления</th>
                                        <th>Действия</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var product in Model.Products) {
                                        <tr>
                                            <td>@product.Name</td>
                                            <td>@(product.Category?.Name ?? "Без категории")</td>
                                            <td>@product.Price.ToString("C")</td>
                                            <td>@(product.SalePrice?.ToString("C") ?? "-")</td>
                                            <td>@product.DateAdded.ToString("dd.MM.yyyy")</td>
                                            <td>
                                                <a href="/@Model.Company?.ShortName/editproduct/@product.Id" class="btn btn-sm btn-primary">Редактировать</a>
                                                <a href="/@Model.Company?.ShortName/deleteproduct/@product.Id" class="btn btn-sm btn-danger">Удалить</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    } else {
                        <p class="text-muted">Товаров пока нет. <a href="/@Model.Company?.ShortName/addproduct">Добавить первый товар</a></p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>