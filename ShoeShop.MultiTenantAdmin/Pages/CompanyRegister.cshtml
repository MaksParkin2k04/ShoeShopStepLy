@page "/Company/Register"
@model ShoeShop.MultiTenantAdmin.Pages.CompanyRegisterModel
@{
    ViewData["Title"] = "Регистрация компании";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h4>Регистрация новой компании</h4>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div class="mb-3">
                            <label asp-for="Input.Name" class="form-label">Название компании</label>
                            <input asp-for="Input.Name" class="form-control" required />
                            <span asp-validation-for="Input.Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.ShortName" class="form-label">Сокращенное название</label>
                            <input asp-for="Input.ShortName" class="form-control" placeholder="mycompany" required />
                            <div class="form-text">
                                Будет использоваться в URL: https://site.com/<strong>mycompany</strong>
                            </div>
                            <span asp-validation-for="Input.ShortName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.ContactEmail" class="form-label">Email для связи</label>
                            <input asp-for="Input.ContactEmail" type="email" class="form-control" required />
                            <span asp-validation-for="Input.ContactEmail" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.ContactPhone" class="form-label">Телефон (необязательно)</label>
                            <input asp-for="Input.ContactPhone" class="form-control" />
                            <span asp-validation-for="Input.ContactPhone" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.Description" class="form-label">Описание (необязательно)</label>
                            <textarea asp-for="Input.Description" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Input.Description" class="text-danger"></span>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">Зарегистрировать компанию</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>