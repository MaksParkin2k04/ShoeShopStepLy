@page "/companies"
@model ShoeShop.MultiTenantAdmin.Pages.CompanySelectModel
@{
    ViewData["Title"] = "Выбор компании";
}

<div class="container">
    <div class="row">
        <div class="col-12">
            <h1>Управление компаниями</h1>
            <p class="text-muted">Выберите компанию для управления или создайте новую</p>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-12">
            <a href="/Company/Register" class="btn btn-primary">
                Создать новую компанию
            </a>
        </div>
    </div>

    @if (Model.UserCompanies.Any()) {
        <div class="row">
            @foreach (var company in Model.UserCompanies) {
                <div class="col-md-4 mb-3">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">@company.Name</h5>
                            <p class="card-text">
                                <small class="text-muted">Сокращение: @company.ShortName</small><br>
                                @if (!string.IsNullOrEmpty(company.Description)) {
                                    <span>@company.Description</span>
                                }
                            </p>
                            <div class="d-flex justify-content-between align-items-center">
                                <a href="/@company.ShortName" class="btn btn-success">
                                    Управление
                                </a>
                                <small class="text-muted">
                                    @company.CreatedDate.ToString("dd.MM.yyyy")
                                </small>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    } else {
        <div class="row">
            <div class="col-12">
                <div class="alert alert-info">
                    <h4>У вас пока нет компаний</h4>
                    <p>Создайте свою первую компанию, чтобы начать работу с системой администрирования.</p>
                    <a href="/Company/Register" class="btn btn-primary">Создать компанию</a>
                </div>
            </div>
        </div>
    }
</div>