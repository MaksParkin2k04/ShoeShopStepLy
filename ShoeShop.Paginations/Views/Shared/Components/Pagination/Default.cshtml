@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model ShoeShop.Paginations.ViewModels.PaginationViewModel

@{
    var model = Model.Route.Data;
}

@if (Model != null && Model.Pagination.HasPagination) {
    <!-- Десктоп пагинация -->
    <div class="d-none d-md-flex justify-content-center">
        <nav aria-label="...">
            <ul class="pagination m-0">
                @if (Model.Pagination.HasPrevious) {
                    <li class="page-item">
                        <a class="page-link" aria-label="Previous" asp-page="@Model.Route.Page" asp-all-route-data="@Model.Route.Data" asp-route-pageindex="@Model.Pagination.Previous">
                            <span aria-hidden="true">&laquo;</span>
                        </a>
                    </li>
                } else {
                    <li class="page-item" aria-label="Previous">
                        <span class="page-link">&laquo;</span>
                    </li>
                }
                @if (Model.Pagination.HasFirstSeparator) {
                    <li class="page-item">
                        <a class="page-link" asp-page="@Model.Route.Page" asp-all-route-data="@Model.Route.Data" asp-route-pageindex="@Model.Pagination.First">@Model.Pagination.First</a>
                    </li>
                    <li class="page-item" aria-current="page">
                        <span class="page-link">...</span>
                    </li>
                }
                @for (int index = Model.Pagination.Start; index <= Model.Pagination.End; index++) {
                    if (index == Model.Pagination.CurrentPage) {
                        <li class="page-item active" aria-current="page">
                            <span class="page-link">@index</span>
                        </li>
                    } else {
                        <li class="page-item">
                            <a class="page-link" asp-page="@Model.Route.Page" asp-all-route-data="@Model.Route.Data" asp-route-pageindex="@index">@index</a>
                        </li>
                    }
                }
                @if (Model.Pagination.HasLastSeparator) {
                    <li class="page-item" aria-current="page">
                        <span class="page-link">...</span>
                    </li>
                    <li class="page-item">
                        <a class="page-link" asp-page="@Model.Route.Page" asp-all-route-data="@Model.Route.Data" asp-route-pageindex="@Model.Pagination.Last">@Model.Pagination.Last</a>
                    </li>
                }
                @if (Model.Pagination.HasNext) {
                    <li class="page-item">
                        <a class="page-link" aria-label="Next" asp-page="@Model.Route.Page" asp-all-route-data="@Model.Route.Data" asp-route-pageindex="@Model.Pagination.Next">
                            <span aria-hidden="true">&raquo;</span>
                        </a>
                    </li>
                } else {
                    <li class="page-item" aria-label="Next">
                        <span class="page-link">&raquo;</span>
                    </li>
                }
            </ul>
        </nav>
    </div>
    
    <!-- Мобильная пагинация -->
    <div class="d-md-none">
        <div class="mobile-pagination">
            <div class="pagination-controls">
                @if (Model.Pagination.HasPrevious) {
                    <a class="pagination-btn prev" asp-page="@Model.Route.Page" asp-all-route-data="@Model.Route.Data" asp-route-pageindex="@Model.Pagination.Previous">
                        <i class="fas fa-chevron-left"></i>
                    </a>
                } else {
                    <span class="pagination-btn prev disabled">
                        <i class="fas fa-chevron-left"></i>
                    </span>
                }
                
                <div class="pagination-info">
                    <span class="current-page">@Model.Pagination.CurrentPage</span>
                    <span class="separator">из</span>
                    <span class="total-pages">@Model.Pagination.PageCount</span>
                </div>
                
                @if (Model.Pagination.HasNext) {
                    <a class="pagination-btn next" asp-page="@Model.Route.Page" asp-all-route-data="@Model.Route.Data" asp-route-pageindex="@Model.Pagination.Next">
                        <i class="fas fa-chevron-right"></i>
                    </a>
                } else {
                    <span class="pagination-btn next disabled">
                        <i class="fas fa-chevron-right"></i>
                    </span>
                }
            </div>
        </div>
    </div>
}

<style>
/* Мобильная пагинация */
.mobile-pagination {
    margin: 2rem 0;
    padding: 1rem;
    background: #f8f9fa;
    border-radius: 12px;
}

.pagination-controls {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 0.5rem;
}

.pagination-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 44px;
    height: 44px;
    border-radius: 50%;
    background: #fff;
    border: 2px solid #dee2e6;
    color: #495057;
    text-decoration: none;
    transition: all 0.2s;
}

.pagination-btn:hover:not(.disabled) {
    background: #007bff;
    border-color: #007bff;
    color: white;
    transform: scale(1.05);
}

.pagination-btn.disabled {
    opacity: 0.4;
    cursor: not-allowed;
}

.pagination-info {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-weight: 500;
}

.current-page {
    font-size: 1.25rem;
    color: #007bff;
    font-weight: 600;
}

.separator {
    color: #6c757d;
    font-size: 0.9rem;
}

.total-pages {
    color: #495057;
}

.pagination-summary {
    text-align: center;
    font-size: 0.875rem;
    color: #6c757d;
    margin-top: 0.5rem;
}
</style>