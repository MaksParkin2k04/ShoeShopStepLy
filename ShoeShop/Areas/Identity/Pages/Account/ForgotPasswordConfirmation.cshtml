@page
@model ForgotPasswordConfirmation
@{
    ViewData["Title"] = "Письмо отправлено";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <div class="card shadow-sm">
                <div class="card-body p-4 text-center">
                    <i class="fas fa-envelope-circle-check fa-4x text-success mb-4"></i>
                    <h3 class="card-title mb-3">Письмо отправлено!</h3>
                    <p class="text-muted mb-4">
                        Проверьте вашу почту для восстановления пароля.
                        <br><small class="text-muted">Письмо может попасть в папку "Спам"</small>
                    </p>
                    <a asp-page="./Login" class="btn btn-primary">
                        <i class="fas fa-sign-in-alt me-2"></i>Вернуться к входу
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
