@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Смена пароля";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<div class="profile-section">
    <div class="section-header">
        <h2 class="section-title">
            <i class="fas fa-lock me-2"></i>
            Смена пароля
        </h2>
        <p class="section-subtitle">Обновите свой пароль для безопасности</p>
    </div>
<partial name="_StatusMessage" for="StatusMessage" />
    <partial name="_StatusMessage" for="StatusMessage" />
    
    <form id="change-password-form" method="post" class="profile-form">
        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
        
        <div class="form-section">
            <h4 class="form-section-title">Пароль</h4>
            <div class="form-group">
                <label asp-for="Input.OldPassword" class="form-label">Текущий пароль</label>
                <input asp-for="Input.OldPassword" class="form-control" type="password" autocomplete="current-password" placeholder="Введите текущий пароль" />
                <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Input.NewPassword" class="form-label">Новый пароль</label>
                <input asp-for="Input.NewPassword" class="form-control" type="password" autocomplete="new-password" placeholder="Введите новый пароль" />
                <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword" class="form-label">Подтвердите пароль</label>
                <input asp-for="Input.ConfirmPassword" class="form-control" type="password" autocomplete="new-password" placeholder="Повторите новый пароль" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            
            <div class="form-actions">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-key me-2"></i>
                    Обновить пароль
                </button>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
