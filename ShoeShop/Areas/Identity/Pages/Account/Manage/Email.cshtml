@page
@model EmailModel
@{
    ViewData["Title"] = "Электронная почта";
    ViewData["ActivePage"] = ManageNavPages.Email;
}

<div class="profile-section">
    <div class="section-header">
        <h2 class="section-title">
            <i class="fas fa-envelope me-2"></i>
            Электронная почта
        </h2>
        <p class="section-subtitle">Управление адресом электронной почты</p>
    </div>
<partial name="_StatusMessage" for="StatusMessage" />
    <partial name="_StatusMessage" for="StatusMessage" />
    
    <form id="email-form" method="post" class="profile-form">
        <div asp-validation-summary="All" class="text-danger" role="alert"></div>
        
        <div class="form-section">
            <h4 class="form-section-title">Текущая почта</h4>
            @if (Model.IsEmailConfirmed)
            {
                <div class="form-group">
                    <label asp-for="Email" class="form-label">Подтвержденная почта</label>
                    <div class="input-group">
                        <input asp-for="Email" class="form-control" disabled />
                        <span class="input-group-text text-success">
                            <i class="fas fa-check"></i>
                        </span>
                    </div>
                </div>
            }
            else
            {
                <div class="form-group">
                    <label asp-for="Email" class="form-label">Неподтвержденная почта</label>
                    <input asp-for="Email" class="form-control" disabled />
                    <button id="email-verification" type="submit" asp-page-handler="SendVerificationEmail" class="btn btn-outline-primary mt-2">
                        <i class="fas fa-envelope me-2"></i>
                        Отправить письмо подтверждения
                    </button>
                </div>
            }
            
            <div class="form-group">
                <label asp-for="Input.NewEmail" class="form-label">Новая почта</label>
                <input asp-for="Input.NewEmail" class="form-control" autocomplete="email" placeholder="Введите новый адрес почты" />
                <span asp-validation-for="Input.NewEmail" class="text-danger"></span>
            </div>
            
            <div class="form-actions">
                <button id="change-email-button" type="submit" asp-page-handler="ChangeEmail" class="btn btn-primary">
                    <i class="fas fa-save me-2"></i>
                    Изменить почту
                </button>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
