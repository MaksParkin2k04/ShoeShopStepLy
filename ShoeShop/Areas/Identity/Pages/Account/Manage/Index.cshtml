@page
@model IndexModel
@{
    ViewData["Title"] = "Профиль";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<div class="profile-section">
    <div class="section-header">
        <h2 class="section-title">
            <i class="fas fa-user me-2"></i>
            Основная информация
        </h2>
        <p class="section-subtitle">Обновите свои личные данные</p>
    </div>
    
    <partial name="_StatusMessage" for="StatusMessage" />
    
    <form id="profile-form" method="post" class="profile-form">
        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
        
        <div class="form-section">
            <h4 class="form-section-title">Личные данные</h4>
            <div class="form-row">
                <div class="form-group">
                    <label asp-for="Username" class="form-label">Электронная почта</label>
                    <input asp-for="Username" class="form-control" disabled />
                    <small class="form-text text-muted">Электронную почту нельзя изменить</small>
                </div>
                
                <div class="form-group">
                    <label asp-for="Input.PhoneNumber" class="form-label">Номер телефона</label>
                    <input asp-for="Input.PhoneNumber" class="form-control" placeholder="+7 (999) 123-45-67" />
                    <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                </div>
            </div>
            
            <div class="form-row">
                <div class="form-group">
                    <label asp-for="Input.FirstName" class="form-label">Имя</label>
                    <input asp-for="Input.FirstName" class="form-control" placeholder="Иван" />
                    <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                </div>
                
                <div class="form-group">
                    <label asp-for="Input.LastName" class="form-label">Фамилия</label>
                    <input asp-for="Input.LastName" class="form-control" placeholder="Иванов" />
                    <span asp-validation-for="Input.LastName" class="text-danger"></span>
                </div>
            </div>
        </div>
        
        <div class="form-section">
            <h4 class="form-section-title">Адрес доставки</h4>
            <div class="form-row">
                <div class="form-group">
                    <label asp-for="Input.City" class="form-label">Город</label>
                    <input asp-for="Input.City" class="form-control" placeholder="Москва" />
                    <span asp-validation-for="Input.City" class="text-danger"></span>
                </div>
                
                <div class="form-group">
                    <label asp-for="Input.PostalCode" class="form-label">Почтовый индекс</label>
                    <input asp-for="Input.PostalCode" class="form-control" placeholder="123456" />
                    <span asp-validation-for="Input.PostalCode" class="text-danger"></span>
                </div>
            </div>
            
            <div class="form-group full-width">
                <label asp-for="Input.Street" class="form-label">Улица</label>
                <input asp-for="Input.Street" class="form-control" placeholder="ул. Примерная" />
                <span asp-validation-for="Input.Street" class="text-danger"></span>
            </div>
            
            <div class="form-row">
                <div class="form-group">
                    <label asp-for="Input.House" class="form-label">Дом</label>
                    <input asp-for="Input.House" class="form-control" placeholder="д. 1" />
                    <span asp-validation-for="Input.House" class="text-danger"></span>
                </div>
                
                <div class="form-group">
                    <label asp-for="Input.Apartment" class="form-label">Квартира</label>
                    <input asp-for="Input.Apartment" class="form-control" placeholder="кв. 1" />
                    <span asp-validation-for="Input.Apartment" class="text-danger"></span>
                </div>
            </div>
            
            <div class="form-actions">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save me-2"></i>
                    Сохранить изменения
                </button>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
