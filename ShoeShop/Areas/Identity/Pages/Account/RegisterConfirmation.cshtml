@page
@model RegisterConfirmationModel
@{
    ViewData["Title"] = "Подтверждение регистрации";
}

<div class="auth-page">
    <div class="auth-container">
        <div class="auth-header">
            <div class="text-center mb-3">
                <i class="fas fa-envelope-circle-check" style="font-size: 3rem; color: var(--primary);"></i>
            </div>
            <h1 class="auth-title">Регистрация завершена</h1>
            <p class="auth-subtitle">Проверьте вашу электронную почту</p>
        </div>

        <div class="text-center">
            @if (@Model.DisplayConfirmAccountLink)
            {
                <div class="alert alert-info" role="alert">
                    <i class="fas fa-info-circle me-2"></i>
                    На сайте не настроена отправка электронных писем.
                </div>
                <a id="confirm-link" href="@Model.EmailConfirmationUrl" class="btn btn-primary">
                    <i class="fas fa-check me-2"></i>
                    Подтвердить аккаунт
                </a>
            }
            else
            {
                <div class="contact-card">
                    <div class="contact-info">
                        <div class="contact-item">
                            <i class="fas fa-envelope"></i>
                            <span>Мы отправили ссылку для подтверждения на ваш email</span>
                        </div>
                        <div class="contact-item">
                            <i class="fas fa-clock"></i>
                            <span>Письмо может прийти в течение нескольких минут</span>
                        </div>
                        <div class="contact-item">
                            <i class="fas fa-folder"></i>
                            <span>Проверьте папку "Спам", если письмо не пришло</span>
                        </div>
                    </div>
                </div>
            }
        </div>

        <div class="auth-links">
            <a asp-page="./Login" class="auth-link">
                <i class="fas fa-arrow-left me-2"></i>
                Вернуться ко входу
            </a>
        </div>
    </div>
</div>

