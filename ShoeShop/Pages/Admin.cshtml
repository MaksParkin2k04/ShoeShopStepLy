@model ShoeShop.Pages.AdminModel
@{
    ViewData["Title"] = "Админ панель";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header text-center">
                    <h3><i class="fas fa-cogs me-2"></i>Админ панель</h3>
                </div>
                <div class="card-body text-center">
                    <p>Перенаправление в админ панель...</p>
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Загрузка...</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    // Автоматическое перенаправление через 2 секунды, если не произошло серверное перенаправление
    setTimeout(function() {
        window.location.href = '/Admin/Index';
    }, 2000);
</script>