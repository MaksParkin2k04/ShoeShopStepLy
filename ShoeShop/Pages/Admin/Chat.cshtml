@page
@model ShoeShop.Pages.Admin.ChatModel
@{
    ViewData["Title"] = "–ß–∞—Ç —Å –∫–ª–∏–µ–Ω—Ç–∞–º–∏";
}

<div class="row">
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="fas fa-comments me-2"></i>
                    –ê–∫—Ç–∏–≤–Ω—ã–µ —á–∞—Ç—ã
                </h5>
            </div>
            <div class="card-body p-0">
                @if (Model.ChatSessions.Any())
                {
                    <div class="list-group list-group-flush">
                        @foreach (var session in Model.ChatSessions)
                        {
                            <a href="?userId=@session.UserId" 
                               class="list-group-item list-group-item-action @(Model.SelectedUserId == session.UserId ? "active" : "")">
                                <div class="d-flex w-100 justify-content-between">
                                    <h6 class="mb-1">
                                        @session.UserName
                                        @if (session.UnreadCount > 0)
                                        {
                                            <span class="badge bg-danger">@session.UnreadCount</span>
                                        }
                                    </h6>
                                    <small>@session.LastMessageTime.ToString("dd.MM HH:mm")</small>
                                </div>
                                <p class="mb-1 text-truncate">@session.LastMessage</p>
                                <small>–°–æ–æ–±—â–µ–Ω–∏–π: @session.MessageCount</small>
                            </a>
                        }
                    </div>
                }
                else
                {
                    <div class="p-3 text-center text-muted">
                        <i class="fas fa-inbox fa-2x mb-2"></i>
                        <p>–ù–µ—Ç –∞–∫—Ç–∏–≤–Ω—ã—Ö —á–∞—Ç–æ–≤</p>
                    </div>
                }
            </div>
        </div>
    </div>

    <div class="col-md-8">
        @if (!string.IsNullOrEmpty(Model.SelectedUserId))
        {
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">
                        <i class="fas fa-user me-2"></i>
                        –ß–∞—Ç —Å @Model.SelectedUserName
                    </h5>
                    <form method="post" asp-page-handler="CloseChat" class="d-inline">
                        <input type="hidden" name="userId" value="@Model.SelectedUserId" />
                        <button type="submit" class="btn btn-outline-danger btn-sm" 
                                onclick="return confirm('–ó–∞–∫—Ä—ã—Ç—å —á–∞—Ç? –í—Å–µ —Å–æ–æ–±—â–µ–Ω–∏—è –±—É–¥—É—Ç —É–¥–∞–ª–µ–Ω—ã.')">
                            <i class="fas fa-times"></i> –ó–∞–∫—Ä—ã—Ç—å —á–∞—Ç
                        </button>
                    </form>
                </div>
                <div class="card-body" style="height: 400px; overflow-y: auto;" id="chat-messages">
                    @if (Model.Messages.Any())
                    {
                        @foreach (var message in Model.Messages)
                        {
                            <div class="mb-3">
                                @if (!string.IsNullOrEmpty(message.RespondedBy))
                                {
                                    <!-- –°–æ–æ–±—â–µ–Ω–∏–µ –æ—Ç –∞–¥–º–∏–Ω–∏—Å—Ç—Ä–∞—Ç–æ—Ä–∞ -->
                                    <div class="d-flex justify-content-start mb-2">
                                        <div class="bg-success text-white rounded p-2" style="max-width: 70%;">
                                            <div><strong>@message.RespondedBy:</strong></div>
                                            <div>@message.Message</div>
                                            <small class="opacity-75">@message.CreatedAt.ToString("dd.MM.yyyy HH:mm")</small>
                                        </div>
                                    </div>
                                }
                                else
                                {
                                    <!-- –°–æ–æ–±—â–µ–Ω–∏–µ –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è -->
                                    <div class="d-flex justify-content-end mb-2">
                                        <div class="bg-primary text-white rounded p-2" style="max-width: 70%;">
                                            <div>@message.Message</div>
                                            <small class="opacity-75">@message.CreatedAt.ToString("dd.MM.yyyy HH:mm")</small>
                                        </div>
                                    </div>

                                    <!-- –û—Ç–≤–µ—Ç –±–æ—Ç–∞ (–µ—Å–ª–∏ –µ—Å—Ç—å) -->
                                    @if (!string.IsNullOrEmpty(message.Response))
                                    {
                                        <div class="d-flex justify-content-start">
                                            <div class="bg-light border rounded p-2" style="max-width: 70%;">
                                                <div><strong>ü§ñ –ë–æ—Ç:</strong></div>
                                                <div>@message.Response</div>
                                                <small class="text-muted">@message.RespondedAt?.ToString("dd.MM.yyyy HH:mm")</small>
                                            </div>
                                        </div>
                                    }
                                }
                            </div>
                        }
                    }
                    else
                    {
                        <div class="text-center text-muted">
                            <i class="fas fa-comment-slash fa-2x mb-2"></i>
                            <p>–ù–µ—Ç —Å–æ–æ–±—â–µ–Ω–∏–π</p>
                        </div>
                    }
                </div>
                <div class="card-footer">
                    <form method="post" asp-page-handler="SendResponse">
                        <input type="hidden" name="userId" value="@Model.SelectedUserId" />
                        <div class="input-group">
                            <input type="text" name="response" class="form-control" 
                                   placeholder="–í–≤–µ–¥–∏—Ç–µ –æ—Ç–≤–µ—Ç..." required />
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-paper-plane"></i> –û—Ç–ø—Ä–∞–≤–∏—Ç—å
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        }
        else
        {
            <div class="card">
                <div class="card-body text-center">
                    <i class="fas fa-comments fa-3x text-muted mb-3"></i>
                    <h5>–í—ã–±–µ—Ä–∏—Ç–µ —á–∞—Ç –¥–ª—è –ø—Ä–æ—Å–º–æ—Ç—Ä–∞</h5>
                    <p class="text-muted">–í—ã–±–µ—Ä–∏—Ç–µ –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è –∏–∑ —Å–ø–∏—Å–∫–∞ —Å–ª–µ–≤–∞, —á—Ç–æ–±—ã –ø—Ä–æ—Å–º–æ—Ç—Ä–µ—Ç—å –∏—Å—Ç–æ—Ä–∏—é —Å–æ–æ–±—â–µ–Ω–∏–π</p>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        // –ê–≤—Ç–æ–º–∞—Ç–∏—á–µ—Å–∫–∞—è –ø—Ä–æ–∫—Ä—É—Ç–∫–∞ –∫ –ø–æ—Å–ª–µ–¥–Ω–µ–º—É —Å–æ–æ–±—â–µ–Ω–∏—é
        document.addEventListener('DOMContentLoaded', function() {
            const chatMessages = document.getElementById('chat-messages');
            if (chatMessages) {
                chatMessages.scrollTop = chatMessages.scrollHeight;
            }
            
            // –û–±–Ω–æ–≤–ª—è–µ–º —Å–ø–∏—Å–æ–∫ —á–∞—Ç–æ–≤ –∫–∞–∂–¥—ã–µ 15 —Å–µ–∫—É–Ω–¥
            setInterval(function() {
                fetch('/Admin/Chat')
                    .then(response => response.text())
                    .then(html => {
                        const parser = new DOMParser();
                        const doc = parser.parseFromString(html, 'text/html');
                        const newChatList = doc.querySelector('.list-group');
                        const currentChatList = document.querySelector('.list-group');
                        if (newChatList && currentChatList) {
                            // –û–±–Ω–æ–≤–ª—è–µ–º —Ç–æ–ª—å–∫–æ –µ—Å–ª–∏ –Ω–µ—Ç –≤—ã–±—Ä–∞–Ω–Ω–æ–≥–æ —á–∞—Ç–∞
                            if (!document.querySelector('.list-group-item.active')) {
                                currentChatList.innerHTML = newChatList.innerHTML;
                            }
                        }
                    })
                    .catch(error => console.error('–û—à–∏–±–∫–∞ –æ–±–Ω–æ–≤–ª–µ–Ω–∏—è —Å–ø–∏—Å–∫–∞ —á–∞—Ç–æ–≤:', error));
            }, 15000);
        });

        // –ê–≤—Ç–æ–æ–±–Ω–æ–≤–ª–µ–Ω–∏–µ —Ç–æ–ª—å–∫–æ —Å–ø–∏—Å–∫–∞ —á–∞—Ç–æ–≤ –∏ —Å–æ–æ–±—â–µ–Ω–∏–π –±–µ–∑ –ø–µ—Ä–µ–∑–∞–≥—Ä—É–∑–∫–∏ —Å—Ç—Ä–∞–Ω–∏—Ü—ã
        @if (!string.IsNullOrEmpty(Model.SelectedUserId))
        {
            <text>
            setInterval(function() {
                // –û–±–Ω–æ–≤–ª—è–µ–º —Ç–æ–ª—å–∫–æ —Å–æ–¥–µ—Ä–∂–∏–º–æ–µ —á–∞—Ç–∞ –±–µ–∑ –ø–µ—Ä–µ–∑–∞–≥—Ä—É–∑–∫–∏ —Å—Ç—Ä–∞–Ω–∏—Ü—ã
                fetch(window.location.href)
                    .then(response => response.text())
                    .then(html => {
                        const parser = new DOMParser();
                        const doc = parser.parseFromString(html, 'text/html');
                        const newMessages = doc.getElementById('chat-messages');
                        if (newMessages) {
                            document.getElementById('chat-messages').innerHTML = newMessages.innerHTML;
                            document.getElementById('chat-messages').scrollTop = document.getElementById('chat-messages').scrollHeight;
                        }
                    })
                    .catch(error => console.error('–û—à–∏–±–∫–∞ –æ–±–Ω–æ–≤–ª–µ–Ω–∏—è —á–∞—Ç–∞:', error));
            }, 5000);
            </text>
        }
    </script>
}