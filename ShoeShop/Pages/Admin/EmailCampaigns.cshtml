@page
@model ShoeShop.Pages.Admin.EmailCampaignsModel
@{
    ViewData["Title"] = "Email рассылки";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-envelope me-2"></i>Email рассылки</h2>
        <div>
            <a asp-page="/Admin/Index" class="btn btn-outline-secondary me-2">
                <i class="fas fa-arrow-left me-2"></i>Назад
            </a>
            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createCampaignModal">
                <i class="fas fa-plus me-2"></i>Создать рассылку
            </button>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body text-center">
                    <h5 class="card-title">Всего клиентов</h5>
                    <h2 class="text-primary">@Model.TotalCustomers</h2>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body text-center">
                    <h5 class="card-title">Отправлено рассылок</h5>
                    <h2 class="text-success">@Model.SentCampaigns</h2>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body text-center">
                    <h5 class="card-title">Черновиков</h5>
                    <h2 class="text-warning">@Model.DraftCampaigns</h2>
                </div>
            </div>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">История рассылок</h5>
        </div>
        <div class="card-body">
            @if (Model.Campaigns.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Тема</th>
                                <th>Получателей</th>
                                <th>Статус</th>
                                <th>Дата создания</th>
                                <th>Дата отправки</th>
                                <th>Действия</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var campaign in Model.Campaigns)
                            {
                                <tr>
                                    <td>@campaign.Subject</td>
                                    <td>@campaign.RecipientCount</td>
                                    <td>
                                        @if (campaign.Status == "Sent")
                                        {
                                            <span class="badge bg-success">Отправлено</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning">Черновик</span>
                                        }
                                    </td>
                                    <td>@campaign.CreatedAt.ToString("dd.MM.yyyy HH:mm")</td>
                                    <td>@(campaign.SentAt?.ToString("dd.MM.yyyy HH:mm") ?? "-")</td>
                                    <td>
                                        <form method="post" asp-page-handler="Send" class="d-inline">
                                            <input type="hidden" name="campaignId" value="@campaign.Id" />
                                            <button type="submit" class="btn btn-sm btn-success" onclick="return confirm('@(campaign.Status == "Sent" ? "Отправить рассылку повторно?" : "Отправить рассылку всем клиентам?")')">
                                                <i class="fas fa-paper-plane"></i> @(campaign.Status == "Sent" ? "Повторить" : "Отправить")
                                            </button>
                                        </form>
                                        <button type="button" class="btn btn-sm btn-info" onclick="viewCampaign('@campaign.Subject', '@Html.Raw(System.Text.Encodings.Web.JavaScriptEncoder.Default.Encode(campaign.Body))')">
                                            <i class="fas fa-eye"></i> Просмотр
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <p class="text-muted text-center py-4">Рассылок пока нет</p>
            }
        </div>
    </div>
</div>

<!-- Модальное окно создания рассылки -->
<div class="modal fade" id="createCampaignModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <form method="post" asp-page-handler="Create">
                <div class="modal-header">
                    <h5 class="modal-title">Создать рассылку</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Тема письма</label>
                        <input type="text" name="subject" class="form-control" required placeholder="Например: Скидка 20% на всю обувь!">
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Текст письма</label>
                        <textarea name="body" class="form-control" rows="10" required placeholder="Введите текст письма..."></textarea>
                        <small class="text-muted">Можно использовать HTML теги для форматирования</small>
                    </div>
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle me-2"></i>
                        Рассылка будет отправлена всем зарегистрированным пользователям (@Model.TotalCustomers чел.)
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Отмена</button>
                    <button type="submit" class="btn btn-primary">Создать черновик</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Модальное окно просмотра -->
<div class="modal fade" id="viewCampaignModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="viewCampaignTitle"></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div id="viewCampaignBody"></div>
            </div>
        </div>
    </div>
</div>

<script>
function viewCampaign(subject, body) {
    document.getElementById('viewCampaignTitle').textContent = subject;
    document.getElementById('viewCampaignBody').innerHTML = body;
    new bootstrap.Modal(document.getElementById('viewCampaignModal')).show();
}
</script>
