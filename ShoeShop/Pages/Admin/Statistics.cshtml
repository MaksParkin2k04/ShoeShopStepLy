            }
        }
    }
});

// –ì—Ä–∞—Ñ–∏–∫ –ø–æ –∫–∞—Ç–µ–≥–æ—Ä–∏—è–º
const categoriesCtx = document.getElementById('categoriesChart').getContext('2d');
const categoryData = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.CategoryStatistics));
new Chart(categoriesCtx, {
    type: 'pie',
    data: {
        labels: Object.keys(categoryData),
        datasets: [{
            data: Object.values(categoryData),
            backgroundColor: ['#28a745', '#dc3545', '#ffc107', '#17a2b8', '#6f42c1']
        }]
    },
    options: {
        responsive: true,
        maintainAspectRatio: false,
        plugins: {
            legend: {
                position: 'bottom',
                labels: { boxWidth: 12, font: { size: 11 } }
            }
        }
    }
});

// –ì—Ä–∞—Ñ–∏–∫ —Å—Ç–∞—Ç—É—Å–æ–≤ –∑–∞–∫–∞–∑–æ–≤
const statusCtx = document.getElementById('statusChart').getContext('2d');
const statusData = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.OrderStatusStats));
new Chart(statusCtx, {
    type: 'bar',
    data: {
        labels: Object.keys(statusData),
        datasets: [{
            label: '–ö–æ–ª–∏—á–µ—Å—Ç–≤–æ',
            data: Object.values(statusData),
            backgroundColor: '#6c757d'
        }]
    },
    options: {
        responsive: true,
        scales: {
            y: {
                beginAtZero: true
            }
        }
    }
});

// –ì—Ä–∞—Ñ–∏–∫ –ø—Ä–æ–¥–∞–∂ –ø–æ –¥–Ω—è–º
const dailySalesCtx = document.getElementById('dailySalesChart').getContext('2d');
const dailyData = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.DailySalesData));
new Chart(dailySalesCtx, {
    type: 'line',
    data: {
        labels: dailyData.map(d => new Date(d.date).toLocaleDateString('ru-RU')),
        datasets: [{
            label: '–í—ã—Ä—É—á–∫–∞ (‚ÇΩ)',
