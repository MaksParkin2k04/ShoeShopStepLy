@page
@using ShoeShop.Models
@using ShoeShop.Services
@model ShoeShop.Pages.Admin.StockModel
@{
    ViewData["Title"] = "Управление остатками";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Управление остатками</h2>
    <a asp-page="/Admin/Index" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-left me-2"></i>Админ панель
    </a>
</div>

@if (!string.IsNullOrEmpty(Model.Message)) {
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @Model.Message
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@* Поиск и фильтры *@
<div class="card mb-4">
    <div class="card-header">
        <h6 class="mb-0">Поиск и фильтры</h6>
    </div>
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-md-6">
                <label class="form-label">Поиск по названию товара</label>
                <input type="text" name="search" class="form-control" placeholder="Введите название товара" value="@Model.SearchQuery">
            </div>
            <div class="col-md-4">
                <label class="form-label">Статус наличия</label>
                <select name="status" class="form-select">
                    <option value="">Все статусы</option>
                    @if (Model.StatusFilter == "instock") {
                        <option value="instock" selected>В наличии (≥ 5)</option>
                    } else {
                        <option value="instock">В наличии (≥ 5)</option>
                    }
                    @if (Model.StatusFilter == "lowstock") {
                        <option value="lowstock" selected>Мало товара (1-4)</option>
                    } else {
                        <option value="lowstock">Мало товара (1-4)</option>
                    }
                    @if (Model.StatusFilter == "outofstock") {
                        <option value="outofstock" selected>Нет в наличии (0)</option>
                    } else {
                        <option value="outofstock">Нет в наличии (0)</option>
                    }
                </select>
            </div>
            <div class="col-md-2 d-flex align-items-end">
                <div class="d-flex gap-2 w-100">
                    <button type="submit" class="btn btn-primary">Поиск</button>
                    <a href="?" class="btn btn-outline-secondary">Очистить</a>
                </div>
            </div>
        </form>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5>Приход товара</h5>
            </div>
            <div class="card-body">
                <form method="post" asp-page-handler="AddStock">
                    <div class="mb-3">
                        <label class="form-label">Поиск товара</label>
                        <input type="text" id="addStockSearch" class="form-control mb-2" placeholder="Введите название товара для поиска">
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Товар</label>
                        <select name="productId" id="addStockSelect" class="form-select" required>
                            <option value="">Выберите товар</option>
                            @foreach (var product in Model.Products) {
                                <option value="@product.Id">@product.Name</option>
                            }
                        </select>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Размер</label>
                        <select name="size" class="form-select" required>
                            @for (int size = 26; size <= 45; size++) {
                                <option value="@size">@size</option>
                            }
                        </select>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Количество</label>
                        <input type="number" name="quantity" class="form-control" min="1" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Цена закупки (руб.)</label>
                        <input type="number" name="purchasePrice" class="form-control" min="0" step="0.01" placeholder="0.00">
                    </div>
                    <button type="submit" class="btn btn-success">Добавить приход</button>
                </form>
            </div>
        </div>
    </div>
    
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5>Списание товара</h5>
            </div>
            <div class="card-body">
                <form method="post" asp-page-handler="ReduceStock">
                    <div class="mb-3">
                        <label class="form-label">Поиск товара</label>
                        <input type="text" id="reduceStockSearch" class="form-control mb-2" placeholder="Введите название товара для поиска">
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Товар</label>
                        <select name="productId" id="reduceStockSelect" class="form-select" required>
                            <option value="">Выберите товар</option>
                            @foreach (var product in Model.Products) {
                                <option value="@product.Id">@product.Name</option>
                            }
                        </select>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Размер</label>
                        <select name="size" class="form-select" required>
                            @for (int size = 26; size <= 45; size++) {
                                <option value="@size">@size</option>
                            }
                        </select>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Количество</label>
                        <input type="number" name="quantity" class="form-control" min="1" required>
                    </div>
                    <button type="submit" class="btn btn-danger">Списать товар</button>
                </form>
            </div>
        </div>
    </div>
    
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h5>Текущие остатки</h5>
            </div>
            <div class="card-body">
                @if (Model.ProductStocks.Any()) {
                    <!-- Десктопная таблица -->
                    <div class="table-responsive d-none d-md-block">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Товар</th>
                                    <th>Размер</th>
                                    <th>Кол-во</th>
                                    <th>Цена</th>
                                    <th>Статус</th>
                                    <th>Действия</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var stock in Model.ProductStocks) {
                                    var statusClass = stock.Quantity == 0 ? "text-danger" : (stock.Quantity < 5 ? "text-warning" : "text-success");
                                    var statusText = stock.Quantity == 0 ? "Нет" : (stock.Quantity < 5 ? "Мало" : "Есть");
                                    var product = Model.Products.FirstOrDefault(p => p.Id == stock.ProductId);
                                    <tr>
                                        <td>@(stock.Product?.Name ?? product?.Name ?? "Неизвестный")</td>
                                        <td>@stock.Size</td>
                                        <td>@stock.Quantity</td>
                                        <td>@(stock.PurchasePrice > 0 ? stock.PurchasePrice.ToString("F0") + "₽" : "-")</td>
                                        <td class="@statusClass">@statusText</td>
                                        <td>
                                            <form method="post" asp-page-handler="UpdatePrice" class="d-inline">
                                                <input type="hidden" name="productId" value="@stock.ProductId" />
                                                <input type="hidden" name="size" value="@stock.Size" />
                                                <div class="input-group input-group-sm" style="width: 100px;">
                                                    <input type="number" name="purchasePrice" class="form-control" step="0.01" min="0" value="@stock.PurchasePrice" placeholder="0">
                                                    <button type="submit" class="btn btn-outline-primary btn-sm">
                                                        <i class="fas fa-check"></i>
                                                    </button>
                                                </div>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    
                    <!-- Мобильные карточки -->
                    <div class="d-md-none">
                        @foreach (var stock in Model.ProductStocks) {
                            var statusClass = stock.Quantity == 0 ? "text-danger" : (stock.Quantity < 5 ? "text-warning" : "text-success");
                            var statusText = stock.Quantity == 0 ? "Нет в наличии" : (stock.Quantity < 5 ? "Мало товара" : "В наличии");
                            var product = Model.Products.FirstOrDefault(p => p.Id == stock.ProductId);
                            <div class="card mb-2">
                                <div class="card-body p-3">
                                    <h6 class="card-title mb-2">@(stock.Product?.Name ?? product?.Name ?? "Неизвестный товар")</h6>
                                    <div class="row g-2 mb-2">
                                        <div class="col-4"><small class="text-muted">Размер:</small><br><strong>@stock.Size</strong></div>
                                        <div class="col-4"><small class="text-muted">Кол-во:</small><br><strong>@stock.Quantity</strong></div>
                                        <div class="col-4"><small class="text-muted">Статус:</small><br><span class="@statusClass"><strong>@statusText</strong></span></div>
                                    </div>
                                    <div class="row g-2">
                                        <div class="col-6"><small class="text-muted">Цена:</small><br>@(stock.PurchasePrice > 0 ? stock.PurchasePrice.ToString("F0") + " ₽" : "-")</div>
                                        <div class="col-6">
                                            <form method="post" asp-page-handler="UpdatePrice">
                                                <input type="hidden" name="productId" value="@stock.ProductId" />
                                                <input type="hidden" name="size" value="@stock.Size" />
                                                <div class="input-group input-group-sm">
                                                    <input type="number" name="purchasePrice" class="form-control" step="0.01" min="0" value="@stock.PurchasePrice" placeholder="0">
                                                    <button type="submit" class="btn btn-outline-primary btn-sm">
                                                        <i class="fas fa-check"></i>
                                                    </button>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                } else {
                    <p class="text-muted">Остатки не найдены</p>
                }
            </div>
        </div>
    </div>
</div>

@* Панель пагинации - десктоп *@
<div class="d-none d-md-flex flex-row-reverse border border-1 p-1 mt-3">
    @await Component.InvokeAsync(typeof(ShoeShop.Paginations.Components.PaginationViewComponent), new {
            currentPage = Model.CurrentPage,
            elementsPerPage = Model.ElementsPerPage,
            totalElementsCount = Model.TotalElementsCount,
            page = "/Admin/Stock",
            routeData = new Dictionary<string, string>([
                new KeyValuePair<string, string>("search", Model.SearchQuery ?? ""), 
                new KeyValuePair<string, string>("status", Model.StatusFilter ?? "")
            ])
        })
</div>

@* Панель пагинации - мобильная *@
<div class="d-md-none">
    @if (Model.TotalElementsCount > Model.ElementsPerPage) {
        var totalPages = (int)Math.Ceiling((double)Model.TotalElementsCount / Model.ElementsPerPage);
        var currentPage = Model.CurrentPage;
        
        @await Component.InvokeAsync(typeof(ShoeShop.Paginations.Components.PaginationViewComponent), new {
                currentPage = Model.CurrentPage,
                elementsPerPage = Model.ElementsPerPage,
                totalElementsCount = Model.TotalElementsCount,
                page = "/Admin/Stock",
                routeData = new Dictionary<string, string>([
                    new KeyValuePair<string, string>("search", Model.SearchQuery ?? ""), 
                    new KeyValuePair<string, string>("status", Model.StatusFilter ?? "")
                ])
            })
    }
</div>

<script>
// Функция поиска для блока "Приход товара"
document.addEventListener('DOMContentLoaded', function() {
    const addStockSearch = document.getElementById('addStockSearch');
    if (addStockSearch) {
        addStockSearch.addEventListener('input', function() {
            const searchValue = this.value.toLowerCase();
            const select = document.getElementById('addStockSelect');
            const options = select.querySelectorAll('option');
            
            options.forEach(option => {
                if (option.value === '') {
                    option.style.display = 'block';
                    return;
                }
                
                const text = option.textContent.toLowerCase();
                option.style.display = text.includes(searchValue) ? 'block' : 'none';
            });
            
            // Сбрасываем выбор если текущий товар не соответствует поиску
            if (select.selectedIndex > 0) {
                const selectedOption = select.options[select.selectedIndex];
                if (selectedOption.style.display === 'none') {
                    select.selectedIndex = 0;
                }
            }
        });
    }
});

// Функция поиска для блока "Списание товара"
const reduceStockSearch = document.getElementById('reduceStockSearch');
if (reduceStockSearch) {
    reduceStockSearch.addEventListener('input', function() {
        const searchValue = this.value.toLowerCase();
        const select = document.getElementById('reduceStockSelect');
        const options = select.querySelectorAll('option');
        
        options.forEach(option => {
            if (option.value === '') {
                option.style.display = 'block';
                return;
            }
            
            const text = option.textContent.toLowerCase();
            option.style.display = text.includes(searchValue) ? 'block' : 'none';
        });
        
        // Сбрасываем выбор если текущий товар не соответствует поиску
        if (select.selectedIndex > 0) {
            const selectedOption = select.options[select.selectedIndex];
            if (selectedOption.style.display === 'none') {
                select.selectedIndex = 0;
            }
        }
    });
}
</script>