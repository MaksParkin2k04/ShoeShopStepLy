@page
@model ShoeShop.Pages.Admin.UsersModel
@{
    ViewData["Title"] = "Управление пользователями";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-users me-2"></i>Управление пользователями</h2>
        <a asp-page="/Admin/Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-2"></i>Назад
        </a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">Список пользователей (@Model.Users.Count)</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Email</th>
                            <th>Имя</th>
                            <th>Дата регистрации</th>
                            <th>Email подтвержден</th>
                            <th>Статус</th>
                            <th>Действия</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model.Users)
                        {
                            <tr>
                                <td>@user.Email</td>
                                <td>@(user.FirstName ?? "-") @(user.LastName ?? "")</td>
                                <td>@user.CreatedAt.ToString("dd.MM.yyyy HH:mm")</td>
                                <td>
                                    @if (user.EmailConfirmed)
                                    {
                                        <span class="badge bg-success">Да</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning">Нет</span>
                                    }
                                </td>
                                <td>
                                    @if (user.IsAdmin)
                                    {
                                        <span class="badge bg-primary">Администратор</span>
                                    }
                                    else if (user.LockoutEnd != null && user.LockoutEnd > DateTimeOffset.Now)
                                    {
                                        <span class="badge bg-danger">Заблокирован</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-success">Активен</span>
                                    }
                                </td>
                                <td>
                                    @if (!user.IsAdmin)
                                    {
                                        @if (user.LockoutEnd == null || user.LockoutEnd <= DateTimeOffset.Now)
                                        {
                                            <form method="post" asp-page-handler="Block" class="d-inline">
                                                <input type="hidden" name="userId" value="@user.Id" />
                                                <button type="submit" class="btn btn-sm btn-warning" onclick="return confirm('Заблокировать пользователя?')">
                                                    <i class="fas fa-ban"></i> Блокировать
                                                </button>
                                            </form>
                                        }
                                        else
                                        {
                                            <form method="post" asp-page-handler="Unblock" class="d-inline">
                                                <input type="hidden" name="userId" value="@user.Id" />
                                                <button type="submit" class="btn btn-sm btn-success">
                                                    <i class="fas fa-check"></i> Разблокировать
                                                </button>
                                            </form>
                                        }
                                        <form method="post" asp-page-handler="Delete" class="d-inline">
                                            <input type="hidden" name="userId" value="@user.Id" />
                                            <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Удалить пользователя? Это действие нельзя отменить!')">
                                                <i class="fas fa-trash"></i> Удалить
                                            </button>
                                        </form>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
