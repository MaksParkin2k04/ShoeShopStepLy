    .cart-page {
        padding: 15px;
    }
    
    .page-title {
        font-size: 1.5rem;
    }
    
    .cart-content {
        grid-template-columns: 1fr;
        gap: 20px;
    }
    
    .cart-item {
        flex-direction: column;
        align-items: flex-start;
        padding: 15px;
        gap: 15px;
    }
    
    .cart-item-image {
        width: 100%;
        height: 200px;
        order: 1;
    }
    
    .cart-item-info {
        width: 100%;
        order: 2;
    }
    
    .cart-item-actions {
        position: static;
        order: 3;
        align-self: flex-end;
    }
    
    .cart-item-quantity {
        order: 4;
        align-self: flex-start;
    }
    
    .cart-item-price {
        order: 5;
        align-self: flex-end;
        font-size: 1.3rem;
        color: #007bff;
        min-width: auto;
    }
    
