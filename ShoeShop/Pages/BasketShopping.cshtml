@page
@using ShoeShop.Models
@model ShoeShop.Pages.BasketShoppingModel
@{
    ViewData["Title"] = "Корзина";
}

<div class="cart-page">
    @* Header *@
    <div class="page-header">
        <h1 class="page-title">Корзина покупок</h1>
        <p class="page-subtitle">Проверьте выбранные товары перед оформлением заказа</p>
    </div>

    @if (TempData["Error"] != null) {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (Model.BasketItems == null || Model.BasketItems.Count() == 0) {
        <div class="empty-cart">
            <div class="empty-cart-icon">
                <i class="fas fa-shopping-cart fa-4x"></i>
            </div>
            <h3 class="empty-cart-title">Корзина пуста</h3>
            <p class="empty-cart-text">Добавьте товары из каталога, чтобы оформить заказ</p>
            <a asp-page="/Index" class="btn btn-primary btn-lg mt-3">
                <i class="fas fa-arrow-left me-2"></i>
                Перейти к покупкам
            </a>
        </div>
    } else {
        <div class="cart-content">
            <div class="cart-items">
                @foreach (var item in Model.BasketItems) {
                    <div class="cart-item">
                        <div class="cart-item-image">
                            @if (item.Product?.Images?.Count > 0) {
                                <img src="@item.Product.Images[0].Path" alt="@item.Product.Images[0].Alt" class="item-image">
                            } else {
                                <div class="item-image-placeholder">
                                    <i class="fas fa-image"></i>
                                </div>
                            }
                        </div>
                        <div class="cart-item-info">
                            <h4 class="item-name">
                                <a asp-page="/Product" asp-route-id="@item.Product?.Id" class="item-link">@item.Product?.Name</a>
                            </h4>
                            <p class="item-description">@item.Product?.Description</p>
                            <p class="item-size">Размер: @item.Size</p>
                            @if (item.AvailableStock < item.Quantity) {
                                <div class="out-of-stock">
                                    <i class="fas fa-exclamation-triangle me-1"></i>
                                    Доступно только @item.AvailableStock шт.
                                </div>
                            } else if (item.AvailableStock <= 3) {
                                <div class="text-warning small">
                                    <i class="fas fa-clock me-1"></i>
                                    Осталось @item.AvailableStock шт.
                                </div>
                            }
                        </div>
                        <div class="cart-item-quantity">
                            <form asp-page="/BasketShopping" asp-page-handler="updatequantity" method="post" class="quantity-form">
                                <input name="productId" type="hidden" value="@item.Product?.Id" />
                                <input name="size" type="hidden" value="@item.Size" />
                                <div class="quantity-controls">
                                    <button type="button" class="btn-quantity" onclick="changeQuantity(this, -1)">-</button>
                                    <input name="quantity" type="number" value="@item.Quantity" min="1" max="@Math.Min(10, item.AvailableStock)" class="quantity-input" onchange="this.form.submit()">
                                    <button type="button" class="btn-quantity" onclick="changeQuantity(this, 1)" @(item.Quantity >= item.AvailableStock ? "disabled" : "")>+</button>
                                </div>
                            </form>
                        </div>
                        <div class="cart-item-price">
                            <span class="item-price">@((item.Product?.Price * item.Quantity) ?? 0) ₽</span>
                        </div>
                        <div class="cart-item-actions">
                            <form asp-page="/BasketShopping" asp-page-handler="deleteproduct" method="post" class="remove-form">
                                <input name="productId" type="hidden" value="@item.Product?.Id" />
                                <input name="size" type="hidden" value="@item.Size" />
                                <button type="submit" class="btn-remove" title="Удалить из корзины">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </form>
                        </div>
                    </div>
                }
            </div>

            <div class="cart-summary">
                <div class="summary-card">
                    <h3 class="summary-title">Итого к оплате</h3>
                    <div class="summary-row">
                        <span>Товары (@Model.BasketItems.Sum(p => p.Quantity) шт.)</span>
                        <span>@Model.BasketItems.Sum(p => p.Product.Price * p.Quantity) ₽</span>
                    </div>
                    <div class="summary-row">
                        <span>Доставка</span>
                        <span class="delivery-info">
                            @if (Model.BasketItems.Sum(p => p.Product.Price * p.Quantity) >= 5000) {
                                <span class="text-success">Бесплатно</span>
                            } else {
                                <span>500 ₽</span>
                            }
                        </span>
                    </div>
                    <hr class="summary-divider">
                    <div class="summary-total">
                        <span>Общая стоимость</span>
                        <span class="total-price">
                            @{
                                var subtotal = Model.BasketItems.Sum(p => p.Product.Price * p.Quantity);
                                var deliveryCost = subtotal >= 5000 ? 0 : 500;
                                var totalCost = subtotal + deliveryCost;
                            }
                            @totalCost ₽
                        </span>
                    </div>
                    @if (Model.HasStockIssues) {
                        <div class="stock-warning">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            Некоторые товары недоступны в нужном количестве
                        </div>
                        <button class="btn btn-secondary btn-lg checkout-btn" disabled>
                            <i class="fas fa-ban me-2"></i>
                            Недостаточно товара
                        </button>
                    } else {
                        <a asp-page="/CreatingOrder" class="btn btn-primary btn-lg checkout-btn">
                            <i class="fas fa-credit-card me-2"></i>
                            Оформить заказ
                        </a>
                    }
                </div>
            </div>
        </div>
    }
</div>

<script>
function changeQuantity(button, change) {
    const input = button.parentElement.querySelector('.quantity-input');
    const currentValue = parseInt(input.value);
    const maxValue = parseInt(input.getAttribute('max'));
    const newValue = Math.max(1, Math.min(maxValue, currentValue + change));
    
    if (newValue !== currentValue) {
        input.value = newValue;
        input.form.submit();
    }
}

// Обновляем состояние кнопок при изменении количества
document.addEventListener('DOMContentLoaded', function() {
    const quantityInputs = document.querySelectorAll('.quantity-input');
    quantityInputs.forEach(input => {
        input.addEventListener('input', function() {
            const maxValue = parseInt(this.getAttribute('max'));
            const currentValue = parseInt(this.value);
            const plusButton = this.parentElement.querySelector('.btn-quantity:last-child');
            
            if (currentValue >= maxValue) {
                plusButton.disabled = true;
                plusButton.style.opacity = '0.5';
            } else {
                plusButton.disabled = false;
                plusButton.style.opacity = '1';
            }
        });
    });
});
</script>

<style>
.cart-page {
    max-width: 1200px;
    margin: 0 auto;
    padding: 20px;
}

.page-header {
    text-align: center;
    margin-bottom: 30px;
}

.page-title {
    font-size: 2rem;
    font-weight: bold;
    color: #333;
    margin-bottom: 10px;
}

.page-subtitle {
