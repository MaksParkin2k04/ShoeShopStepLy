@page
@using ShoeShop.Models
@model ShoeShop.Pages.BasketShoppingModel
@{
    ViewData["Title"] = "Корзина";
}

<div class="cart-page">
    @* Header *@
    <div class="page-header">
        <h1 class="page-title">Корзина покупок</h1>
        <p class="page-subtitle">Проверьте выбранные товары перед оформлением заказа</p>
    </div>

    @if (TempData["Error"] != null) {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (Model.BasketItems == null || Model.BasketItems.Count() == 0) {
        <div class="empty-cart">
            <div class="empty-cart-icon">
                <i class="fas fa-shopping-cart fa-4x"></i>
            </div>
            <h3 class="empty-cart-title">Корзина пуста</h3>
            <p class="empty-cart-text">Добавьте товары из каталога, чтобы оформить заказ</p>
            <a asp-page="/Index" class="btn btn-primary btn-lg mt-3">
                <i class="fas fa-arrow-left me-2"></i>
                Перейти к покупкам
            </a>
        </div>
    } else {
        <div class="cart-content">
            <div class="cart-items">
                @foreach (var item in Model.BasketItems) {
                    <div class="cart-item">
                        <div class="cart-item-image">
                            @if (item.Product?.Images?.Count > 0) {
                                <img src="@item.Product.Images[0].Path" alt="@item.Product.Images[0].Alt" class="item-image">
                            } else {
                                <div class="item-image-placeholder">
                                    <i class="fas fa-image"></i>
                                </div>
                            }
                        </div>
                        <div class="cart-item-info">
                            <h4 class="item-name">
                                <a asp-page="/Product" asp-route-id="@item.Product?.Id" class="item-link">@item.Product?.Name</a>
                            </h4>
                            <p class="item-description">@item.Product?.Description</p>
                            <p class="item-size">Размер: @item.Size</p>
                        </div>
                        <div class="cart-item-quantity">
                            <form asp-page="/BasketShopping" asp-page-handler="updatequantity" method="post" class="quantity-form">
                                <input name="productId" type="hidden" value="@item.Product?.Id" />
                                <input name="size" type="hidden" value="@item.Size" />
                                <div class="quantity-controls">
                                    <button type="button" class="btn-quantity" onclick="changeQuantity(this, -1)">-</button>
                                    <input name="quantity" type="number" value="@item.Quantity" min="1" max="10" class="quantity-input" onchange="this.form.submit()">
                                    <button type="button" class="btn-quantity" onclick="changeQuantity(this, 1)">+</button>
                                </div>
                            </form>
                        </div>
                        <div class="cart-item-price">
                            <span class="item-price">@((item.Product?.Price * item.Quantity) ?? 0) ₽</span>
                        </div>
                        <div class="cart-item-actions">
                            <form asp-page="/BasketShopping" asp-page-handler="deleteproduct" method="post" class="remove-form">
                                <input name="productId" type="hidden" value="@item.Product?.Id" />
                                <input name="size" type="hidden" value="@item.Size" />
                                <button type="submit" class="btn-remove" title="Удалить из корзины">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </form>
                        </div>
                    </div>
                }
            </div>

            <div class="cart-summary">
                <div class="summary-card">
                    <h3 class="summary-title">Итого к оплате</h3>
                    <div class="summary-row">
                        <span>Товары (@Model.BasketItems.Sum(p => p.Quantity) шт.)</span>
                        <span>@Model.BasketItems.Sum(p => p.Product.Price * p.Quantity) ₽</span>
                    </div>
                    <div class="summary-row">
                        <span>Доставка</span>
                        <span class="delivery-info">
                            @if (Model.BasketItems.Sum(p => p.Product.Price * p.Quantity) >= 5000) {
                                <span class="text-success">Бесплатно</span>
                            } else {
                                <span>500 ₽</span>
                            }
                        </span>
                    </div>
                    <hr class="summary-divider">
                    <div class="summary-total">
                        <span>Общая стоимость</span>
                        <span class="total-price">
                            @{
                                var subtotal = Model.BasketItems.Sum(p => p.Product.Price * p.Quantity);
                                var deliveryCost = subtotal >= 5000 ? 0 : 500;
                                var totalCost = subtotal + deliveryCost;
                            }
                            @totalCost ₽
                        </span>
                    </div>
                    <a asp-page="/CreatingOrder" class="btn btn-primary btn-lg checkout-btn">
                        <i class="fas fa-credit-card me-2"></i>
                        Оформить заказ
                    </a>
                </div>
            </div>
        </div>
    }
</div>

<script>
function changeQuantity(button, change) {
    const input = button.parentElement.querySelector('.quantity-input');
    const currentValue = parseInt(input.value);
    const newValue = Math.max(1, Math.min(10, currentValue + change));
    input.value = newValue;
    input.form.submit();
}
</script>

<style>
.cart-item {
    display: flex;
    align-items: center;
    padding: 20px;
    border-bottom: 1px solid #eee;
    gap: 20px;
}

.cart-item-image {
    flex-shrink: 0;
    width: 100px;
    height: 100px;
}

.item-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 8px;
}

.cart-item-info {
    flex-grow: 1;
}

.cart-item-quantity {
    flex-shrink: 0;
}

.quantity-controls {
    display: flex;
    align-items: center;
    border: 1px solid #ddd;
    border-radius: 4px;
    overflow: hidden;
}

.btn-quantity {
    background: #f8f9fa;
    border: none;
    padding: 8px 12px;
    cursor: pointer;
    font-weight: bold;
    transition: background-color 0.2s;
}

.btn-quantity:hover {
    background: #e9ecef;
}

.quantity-input {
    border: none;
    width: 50px;
    text-align: center;
    padding: 8px 4px;
    font-weight: bold;
}

.cart-item-price {
    flex-shrink: 0;
    font-weight: bold;
    font-size: 1.1em;
}

.cart-item-actions {
    flex-shrink: 0;
}

.btn-remove {
    background: #dc3545;
    color: white;
    border: none;
    padding: 8px 12px;
    border-radius: 4px;
    cursor: pointer;
    transition: background-color 0.2s;
}

.btn-remove:hover {
    background: #c82333;
}
</style>