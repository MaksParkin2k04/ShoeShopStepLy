@page
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using ShoeShop.Models
@using ShoeShop.Services
@model IndexModel
@{
    ViewData["Title"] = "Домашняя страница";

    Dictionary<string, string> sortDictionary = new Dictionary<string, string>(new KeyValuePair<string, string>[] {
        new KeyValuePair<string, string>("Default", "По умолчанию"),
        new KeyValuePair<string, string>("Cheaper", "Сначала Дешевле"),
        new KeyValuePair<string, string>("Expensive", "Сначала Дороже"),
        new KeyValuePair<string, string>("ByDate", "По дате"),
    });
}

@* Hero Section *@
<div class="hero-section">
    <div class="hero-content">
        <div class="hero-badge">НОВАЯ КОЛЛЕКЦИЯ</div>
        <h1 class="hero-title">Премиум обувь</h1>
        <p class="hero-subtitle">Качество и стиль в каждой детали</p>
        <div class="hero-features">
            <span class="feature-item">✓ Итальянская кожа</span>
            <span class="feature-item">✓ Ручная работа</span>
            <span class="feature-item">✓ Гарантия 2 года</span>
        </div>
    </div>
    <div class="hero-decoration"></div>
</div>

@* Catalog Header *@
<div class="catalog-header d-flex justify-content-between align-items-center">
    <h2 class="catalog-title">Коллекция</h2>
    <div class="catalog-controls d-flex gap-2">
        <button class="btn btn-outline-secondary" type="button" data-bs-toggle="collapse" data-bs-target="#filtersCollapse">
            <i class="fas fa-filter me-2"></i>Фильтры
        </button>
        <form id="sortingForm" asp-page="/Index" method="get">
            @if (Model.CategoryId.HasValue) {
                <input type="hidden" name="categoryId" value="@Model.CategoryId" />
            }
            @if (Model.MinPrice.HasValue) {
                <input type="hidden" name="minPrice" value="@Model.MinPrice" />
            }
            @if (Model.MaxPrice.HasValue) {
                <input type="hidden" name="maxPrice" value="@Model.MaxPrice" />
            }
            @if (Model.Sizes != null) {
                @for (int i = 0; i < Model.Sizes.Length; i++) {
                    <input type="hidden" name="sizes[@i]" value="@Model.Sizes[i]" />
                }
            }
            <select name="sort" class="sort-select" onchange="document.getElementById('sortingForm').submit()">
                @foreach (string item in Enum.GetNames(typeof(ProductSorting))) {
                    if (Model.Sorting.ToString() == item) {
                        <option value="@item" selected>@sortDictionary[item]</option>
                    } else {
                        <option value="@item">@sortDictionary[item]</option>
                    }
                }
            </select>
        </form>
    </div>
</div>

@* Filters Panel *@
<div class="collapse" id="filtersCollapse">
    <div class="filters-panel">
        <form asp-page="/Index" method="get" class="filters-form">
            <div class="row g-3">
                <div class="col-md-3">
                    <label class="form-label">Цена</label>
                    <div class="d-flex gap-2">
                        <input type="number" name="minPrice" class="form-control" placeholder="От" min="0" value="@Model.MinPrice">
                        <input type="number" name="maxPrice" class="form-control" placeholder="До" min="0" value="@Model.MaxPrice">
                    </div>
                </div>
                <div class="col-md-3">
                    <label class="form-label">Категория</label>
                    <select name="categoryId" class="form-select">
                        <option value="">Все категории</option>
                        @await Component.InvokeAsync("CategoriesOptions", new { selectedCategoryId = Model.CategoryId })
                    </select>
                </div>
                <div class="col-md-2">
                    <label class="form-label">Размеры</label>
                    <div class="sizes-filter">
                        @for (int size = 36; size <= 45; size++) {
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="checkbox" name="sizes" value="@size" id="filterSize@(size)" @(Model.Sizes?.Contains(size) == true ? "checked" : "")>
                                <label class="form-check-label" for="filterSize@(size)">@size</label>
                            </div>
                        }
                    </div>
                </div>
                <div class="col-md-2">
                    <label class="form-label">Сортировка</label>
                    <select name="sort" class="form-select">
                        @if (Model.Sorting == ProductSorting.Default) {
                            <option value="Default" selected>По умолчанию</option>
                        } else {
                            <option value="Default">По умолчанию</option>
                        }
                        @if (Model.Sorting == ProductSorting.Cheaper) {
                            <option value="Cheaper" selected>Сначала дешевле</option>
                        } else {
                            <option value="Cheaper">Сначала дешевле</option>
                        }
                        @if (Model.Sorting == ProductSorting.Expensive) {
                            <option value="Expensive" selected>Сначала дороже</option>
                        } else {
                            <option value="Expensive">Сначала дороже</option>
                        }
                        @if (Model.Sorting == ProductSorting.ByDate) {
                            <option value="ByDate" selected>По дате</option>
                        } else {
                            <option value="ByDate">По дате</option>
                        }
                    </select>
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <div class="d-flex gap-2 w-100">
                        <button type="submit" class="btn btn-primary flex-fill">Применить</button>
                        <a asp-page="/Index" class="btn btn-outline-secondary">Очистить</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@* Products Grid *@
<div class="product-grid">
    @if (Model.Products == null || Model.Products.Count() == 0) {
        <div class="empty-state">
            <h3>Товары не найдены</h3>
            <p>Попробуйте изменить параметры поиска</p>
        </div>
    }

    @foreach (Product product in Model.Products ?? Enumerable.Empty<Product>()) {
        var availability = Model.ProductAvailability.GetValueOrDefault(product.Id, ProductAvailabilityStatus.InStock);
        var cardClass = availability == ProductAvailabilityStatus.OutOfStock ? "product-card out-of-stock" : "product-card";
        <div class="@cardClass" onclick="window.location.href='@Url.Page("Product", new { id = product.Id })'" style="cursor: pointer;">
            <div class="product-image">
                <div id="carousel-@product.Id" class="carousel slide" data-bs-ride="false">
                    @if (product.Images?.Count > 1) {
                        <div class="carousel-indicators">
                            @for (int x = 0; x < product.Images.Count; x++) {
                                <button type="button" data-bs-target="#carousel-@product.Id" data-bs-slide-to="@x" class="@(x == 0 ? "active" : "")"></button>
                            }
                        </div>
                    }
                    <div class="carousel-inner">
                        @if (product.Images?.Count > 0) {
                            @for (int x = 0; x < product.Images.Count; x++) {
                                <div class="carousel-item @(x == 0 ? "active" : "")">
                                    <img src="@product.Images[x].Path" class="product-img" alt="@product.Images[x].Alt">
                                </div>
                            }
                        } else {
                            <div class="carousel-item active">
                                <div class="d-flex align-items-center justify-content-center bg-light product-img">
                                    <i class="fas fa-image fa-2x text-muted"></i>
                                </div>
                            </div>
                        }
                    </div>
                    @if (product.Images?.Count > 1) {
                        <button class="carousel-control-prev" type="button" data-bs-target="#carousel-@product.Id" data-bs-slide="prev" onclick="event.stopPropagation();">
                            <span class="carousel-control-prev-icon"></span>
                        </button>
                        <button class="carousel-control-next" type="button" data-bs-target="#carousel-@product.Id" data-bs-slide="next" onclick="event.stopPropagation();">
                            <span class="carousel-control-next-icon"></span>
                        </button>
                    }
                </div>
            </div>
            <div class="product-info">
                <h3 class="product-name">@product.Name</h3>
                <p class="product-description">@product.Description</p>
                
                @if (product.Category != null) {
                    <div class="product-category mb-2">
                        <span class="badge bg-secondary">@product.Category.Name</span>
                    </div>
                }
                
                @if (product.Sizes != ProductSize.Not) {
                    <div class="product-sizes-preview mb-2">
                        <small class="text-muted">Размеры:</small>
                        <div class="sizes-preview">
                            @for (int size = 36; size <= 45; size++) {
                                var sizeFlag = (ProductSize)Enum.Parse(typeof(ProductSize), $"S{size}");
                                if (product.Sizes.HasFlag(sizeFlag)) {
                                    var sizeQuantities = Model.ProductSizeQuantities.GetValueOrDefault(product.Id, new Dictionary<int, int>());
                                    var quantity = sizeQuantities.GetValueOrDefault(size, 0);
                                    var sizeClass = quantity == 0 ? "size-preview unavailable" : "size-preview";
                                    <span class="@sizeClass">@size</span>
                                }
                            }
                        </div>
                    </div>
                }
                
                <div class="d-flex justify-content-between align-items-center">
                    <div class="d-flex flex-column">
                        @if (product.HasDiscount) {
                            <div class="price-section">
                                <span class="product-price-old">@product.Price ₽</span>
                                <span class="product-price">@product.SalePrice ₽</span>
                                <span class="discount-badge">Скидка</span>
                            </div>
                        } else {
                            <span class="product-price">@product.Price ₽</span>
                        }
                        @if (availability == ProductAvailabilityStatus.OutOfStock) {
                            <small class="text-muted">Нет в наличии</small>
                        } else if (availability == ProductAvailabilityStatus.LowStock) {
                            <small class="text-warning">Осталось мало</small>
                        }
                    </div>
                    @if (availability != ProductAvailabilityStatus.OutOfStock) {
                        <button class="btn btn-dark btn-sm" onclick="event.stopPropagation(); addToCart(@product.Id);">В корзину</button>
                    } else {
                        <button class="btn btn-secondary btn-sm" disabled>Нет в наличии</button>
                    }
                </div>
            </div>
        </div>
    }
</div>

@* Pagination *@
<div class="d-flex justify-content-center mt-5">
    @{
        var routeData = new Dictionary<string, string> {
            ["sort"] = Model.Sorting.ToString()
        };
        if (Model.CategoryId.HasValue) routeData["categoryId"] = Model.CategoryId.ToString();
        if (Model.MinPrice.HasValue) routeData["minPrice"] = Model.MinPrice.ToString();
        if (Model.MaxPrice.HasValue) routeData["maxPrice"] = Model.MaxPrice.ToString();
        if (Model.Sizes != null && Model.Sizes.Length > 0) {
            for (int i = 0; i < Model.Sizes.Length; i++) {
                routeData[$"sizes[{i}]"] = Model.Sizes[i].ToString();
            }
        }
    }
    @await Component.InvokeAsync(typeof(ShoeShop.Paginations.Components.PaginationViewComponent), new {
            currentPage = Model.CurrentPage,
            elementsPerPage = Model.ElementsPerPage,
            totalElementsCount = Model.TotalElementsCount,
            page = "/Index",
            routeData = routeData
        })
</div>

<style>
.price-section {
    display: flex;
    flex-direction: column;
    gap: 2px;
}

.product-price-old {
    font-size: 0.9em;
    color: #999;
    text-decoration: line-through;
}

.product-price {
    font-weight: bold;
}

.discount-badge {
    background: #dc3545;
    color: white;
    padding: 2px 6px;
    border-radius: 3px;
    font-size: 0.7em;
    font-weight: bold;
    align-self: flex-start;
}
</style>

<script>
function addToCart(productId) {
    console.log('Добавлен товар с ID:', productId);
    alert('Товар добавлен в корзину!');
}
</script>