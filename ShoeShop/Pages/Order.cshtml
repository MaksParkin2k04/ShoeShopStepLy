@page
@using ShoeShop.Models
@model ShoeShop.Pages.OrderModel
@{
    ViewData["Title"] = "Детали заказа";
}

<div class="order-detail-page">
    @if (Model.Order == null) {
        <div class="empty-state">
            <div class="empty-icon">
                <i class="fas fa-search fa-4x"></i>
            </div>
            <h3 class="empty-title">Заказ не найден</h3>
            <p class="empty-text">Возможно, заказ был удален или у вас нет прав для его просмотра</p>
            <a asp-page="/Orders" class="btn btn-primary mt-3">Вернуться к заказам</a>
        </div>
    } else {
        @* Header *@
        <div class="order-detail-header">
            <div class="order-title-section">
                <h1 class="order-detail-title">
                    <i class="fas fa-receipt me-3"></i>
                    Заказ #@Model.Order.Id.ToString().Substring(0, 8)
                </h1>
                <div class="order-meta">
                    <span class="order-date">
                        <i class="fas fa-calendar me-1"></i>
                        @Model.Order.CreatedDate.ToString("dd.MM.yyyy в HH:mm")
                    </span>
                </div>
            </div>
            
            <div class="order-status-section">
                <span class="status-badge status-@Model.Order.Status.ToString().ToLower() large">
                    @switch (Model.Order.Status) {
                        case OrderStatus.Created:
                            <i class="fas fa-plus-circle me-2"></i>
                            <span>Заказ создан</span>
                            break;
                        case OrderStatus.Processing:
                            <i class="fas fa-clock me-2"></i>
                            <span>В обработке</span>
                            break;
                        case OrderStatus.Completed:
                            <i class="fas fa-check-circle me-2"></i>
                            <span>Выполнен</span>
                            break;
                        case OrderStatus.Canceled:
                            <i class="fas fa-times-circle me-2"></i>
                            <span>Отменен</span>
                            break;
                    }
                </span>
                
                <div class="payment-status-info mt-3">
                    @if (Model.Order.PaymentDate.HasValue || Model.Order.Status == OrderStatus.Paid)
                    {
                        <div class="alert alert-success d-flex align-items-center">
                            <i class="fas fa-check-circle me-2"></i>
                            <div>
                                <strong>Оплачено</strong>
                                @if (Model.Order.PaymentDate.HasValue)
                                {
                                    <div class="small">Дата оплаты: @Model.Order.PaymentDate.Value.ToString("dd.MM.yyyy HH:mm")</div>
                                }
                            </div>
                        </div>
                    }
                    else
                    {
                        @if (Model.Order.PaymentType == PaymentType.Online)
                        {
                            <div class="alert alert-warning d-flex align-items-center">
                                <i class="fas fa-clock me-2"></i>
                                <div>
                                    <strong>Ожидает оплаты</strong>
                                    <div class="small">Онлайн оплата</div>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-info d-flex align-items-center">
                                <i class="fas fa-money-bill me-2"></i>
                                <div>
                                    <strong>Оплата при получении</strong>
                                    <div class="small">Оплатите курьеру при получении заказа</div>
                                </div>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>

        <div class="order-detail-content">
            @* Order Items *@
            <div class="order-items-section">
                <h3 class="section-title">
                    <i class="fas fa-box me-2"></i>
                    Состав заказа
                </h3>
                <div class="order-items-list">
                    @foreach (OrderDetail orderDetail in Model.Order.OrderDetails ?? Enumerable.Empty<OrderDetail>()) {
                        <div class="order-detail-item">
                            <div class="item-image-container">
                                <img src="@orderDetail.Image" class="item-image" alt="@orderDetail.Name">
                            </div>
                            <div class="item-info">
                                <h4 class="item-name">
                                    <a asp-page="/Product" asp-route-id="@orderDetail.ProductId" class="item-link">@orderDetail.Name</a>
                                </h4>
                            </div>
                            <div class="item-price">
                                <span class="price-value">@orderDetail.Price ₽</span>
                            </div>
                        </div>
                    }
                </div>
                
                <div class="order-total-section">
                    <div class="total-row">
                        <span>Итого к оплате:</span>
                        <span class="total-amount">@(Model.Order.OrderDetails?.Sum(od => od.Price) ?? 0) ₽</span>
                    </div>
                </div>
            </div>

            @* Delivery Information *@
            <div class="delivery-info-section">
                <h3 class="section-title">
                    <i class="fas fa-truck me-2"></i>
                    Информация о доставке
                </h3>
                
                <div class="info-grid">
                    <div class="info-group">
                        <label class="info-label">Получатель</label>
                        <div class="info-value">@Model.Order.Recipient?.Name</div>
                    </div>
                    
                    <div class="info-group">
                        <label class="info-label">Телефон</label>
                        <div class="info-value">@Model.Order.Recipient?.Phone</div>
                    </div>
                    
                    <div class="info-group">
                        <label class="info-label">Город</label>
                        <div class="info-value">@Model.Order.Recipient?.City</div>
                    </div>
                    
                    <div class="info-group">
                        <label class="info-label">Улица</label>
                        <div class="info-value">@Model.Order.Recipient?.Street</div>
                    </div>
                    
                    <div class="info-group">
                        <label class="info-label">Дом</label>
                        <div class="info-value">@Model.Order.Recipient?.House</div>
                    </div>
                    
                    <div class="info-group">
                        <label class="info-label">Квартира</label>
                        <div class="info-value">@Model.Order.Recipient?.Apartment</div>
                    </div>
                </div>
                
                @if (!string.IsNullOrEmpty(Model.Order.Coment)) {
                    <div class="comment-section">
                        <label class="info-label">Комментарий к заказу</label>
                        <div class="comment-text">@Model.Order.Coment</div>
                    </div>
                }
            </div>
        </div>

        @* Actions *@
        <div class="order-actions">
            <a asp-page="/Orders" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left me-2"></i>
                Вернуться к заказам
            </a>
            
            @if (Model.Order.Status == OrderStatus.Created || Model.Order.Status == OrderStatus.Processing) {
                <form asp-page="/Order" asp-page-handler="cansel" class="d-inline">
                    <input type="hidden" name="orderId" value="@Model.Order.Id" />
                    <button type="submit" class="btn btn-danger" onclick="return confirm('Вы уверены, что хотите отменить заказ?')">
                        <i class="fas fa-times me-2"></i>
                        Отменить заказ
                    </button>
                </form>
            }
        </div>
    }
</div>