<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Магазин обуви</title>
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/fontawesome-free-web/css/all.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/styles/style.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/styles/sportmaster-style.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/styles/stock-styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/styles/returns-steps.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/styles/profile-styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/styles/support-chat.css" asp-append-version="true" />

    <link rel="stylesheet" href="~/ShoeShop.styles.css" asp-append-version="true" />
    @await RenderSectionAsync("Styles", required: false)
    
    <!-- Yandex.Metrika counter -->
    <script type="text/javascript">
        (function(m,e,t,r,i,k,a){
            m[i]=m[i]||function(){(m[i].a=m[i].a||[]).push(arguments)};
            m[i].l=1*new Date();
            for (var j = 0; j < document.scripts.length; j++) {if (document.scripts[j].src === r) { return; }}
            k=e.createElement(t),a=e.getElementsByTagName(t)[0],k.async=1,k.src=r,a.parentNode.insertBefore(k,a)
        })(window, document,'script','https://mc.yandex.ru/metrika/tag.js?id=105873898', 'ym');

        ym(105873898, 'init', {ssr:true, webvisor:true, clickmap:true, ecommerce:"dataLayer", accurateTrackBounce:true, trackLinks:true});
    </script>
    <noscript><div><img src="https://mc.yandex.ru/watch/105873898" style="position:absolute; left:-9999px;" alt="" /></div></noscript>
    <!-- /Yandex.Metrika counter -->
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">Магазин обуви</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Index">Главная</a>
                        </li>
                        @await Component.InvokeAsync("CategoriesMenu")
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-page="/About">О нас</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-page="/Delivery">Доставка</a>
                        </li>
                    </ul>
                    <partial name="_BasketShoppingPartial" />
                    <partial name="_CustomerMenuPartial" />
                    <partial name="_AdminMenuPartial" />
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <main role="main" class="pb-5">
        <div class="container">
            @RenderBody()
        </div>
    </main>

    <footer class="bg-light border-top mt-5">
        <div class="container py-5">
            <div class="row">
                <div class="col-md-4">
                    <h5 class="mb-3 text-dark">Магазин обуви StepLy</h5>
                    <p class="text-muted">Качественная обувь для всей семьи. Широкий ассортимент, доступные цены, быстрая доставка.</p>
                    <div class="social-links">
                        <a href="#" class="text-primary me-3"><i class="fab fa-vk"></i></a>
                        <a href="#" class="text-primary me-3"><i class="fab fa-telegram"></i></a>
                        <a href="#" class="text-primary me-3"><i class="fab fa-instagram"></i></a>
                    </div>
                </div>
                <div class="col-md-2">
                    <h6 class="mb-3 text-dark">Каталог</h6>
                    @await Component.InvokeAsync("CategoriesFooter")
                </div>
                <div class="col-md-2">
                    <h6 class="mb-3 text-dark">Информация</h6>
                    <ul class="list-unstyled">
                        <li><a asp-page="/About" class="text-muted text-decoration-none">О нас</a></li>
                        <li><a asp-page="/Delivery" class="text-muted text-decoration-none">Доставка</a></li>
                        <li><a asp-page="/Returns" class="text-muted text-decoration-none">Возврат</a></li>
                        <li><a asp-page="/Warranty" class="text-muted text-decoration-none">Гарантия</a></li>
                        <li><a asp-page="/Privacy" class="text-muted text-decoration-none">Конфиденциальность</a></li>
                        <li><a asp-page="/Terms" class="text-muted text-decoration-none">Пользовательское соглашение</a></li>
                        <li><a asp-page="/Support" class="text-muted text-decoration-none">
                            <i class="fas fa-headset me-1"></i>Поддержка
                        </a></li>
                    </ul>
                </div>
                <div class="col-md-4">
                    <h6 class="mb-3 text-dark">Контакты</h6>
                    <ul class="list-unstyled text-muted">
                        <li><i class="fas fa-phone me-2"></i>+7 (999) 123-45-67</li>
                        <li><i class="fas fa-envelope me-2"></i>info@steply.ru</li>
                        <li><i class="fas fa-map-marker-alt me-2"></i>г. Москва, ул. Примерная, д. 1</li>
                        <li><i class="fas fa-clock me-2"></i>Пн-Вс: 9:00 - 21:00</li>
                    </ul>
                </div>
            </div>
            <hr class="my-4">
            <div class="row align-items-center">
                <div class="col-12 text-center">
                    <p class="text-muted mb-0">&copy; 2024 StepLy. Все права защищены.</p>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/scripts/script.js" asp-append-version="true"></script>
    <!-- <script src="~/scripts/support-chat.js" asp-append-version="true"></script> -->

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>